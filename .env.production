# ==========================================
# Production environment configuration template

# Flask Configuration
FLASK_ENV=production
SECRET_KEY=CHANGE-ME-TO-SECURE-RANDOM-KEY
FLASK_HOST=0.0.0.0
FLASK_PORT=5001
FLASK_DEBUG=false

# OpenAI API Configuration
OPENAI_API_KEY=your-production-openai-api-key
OPENAI_MODEL_PRIMARY=gpt-4
OPENAI_MODEL_SECONDARY=gpt-3.5-turbo

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/futureshift_prod
DATABASE_BACKUP_ENABLED=true
DATABASE_BACKUP_INTERVAL=3600

# Security Configuration
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
SESSION_TIMEOUT=86400
CSRF_ENABLED=true
INPUT_SANITIZATION_ENABLED=true

# Logging Configuration
LOG_LEVEL=WARNING
LOG_FILE=./logs/app.log

# Performance Configuration
CACHE_ENABLED=true
CACHE_TIMEOUT=3600
BACKGROUND_JOBS_ENABLED=true

# Production Environment
ENVIRONMENT=production

# Feature Flags
AI_FEATURES_ENABLED=true
JOB_SCRAPING_ENABLED=true
EMAIL_NOTIFICATIONS_ENABLED=true
ANALYTICS_ENABLED=true